<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sale_order_form_mr_store" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='order_lines']" position="after">
                <page name="installation_mrstore" string="Installation">
                    <label for="transaction_installation_ids" string="Material to get"/>
                    <field name="transaction_installation_ids">
                        <tree editable="bottom">
                            <field name="sequence" invisible="1" widget="handle"/>
                            <field name="base_installation_id" string="Category" readonly="True" options="{'no_open': True}"/>
                            <field name="base_installation_line_ids" widget="many2many_tags" string="To take" options="{'no_open': True}"/>
                        </tree>
                    </field>
                    <group>

                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
