<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="view_sale_order_line_service_update_wizard" model="ir.ui.view">
        <field name="name">sale.order.line.service.update.form</field>
        <field name="model">sale.order.line.service.update.wizard</field>
        <field name="arch" type="xml">
            <form string="Update Service line">
                <group>
                        <field name="line_id" readonly="1" />
                </group>
                <group string="Calculate service cost">
                    <group>
                        <field name="hide_service"/>
                        <field name="rate_price" readonly="0"/>
                        <field name="actual_unit_price" readonly="1"/>
                        <field name="original_unit_price" readonly="0"/>
                        <field name="estimated_time"/>
                        <field name="new_unit_price" readonly="1"/>
                    </group>
                </group>

                <footer>
                    <button
                        string='Service'
                        name="update_service_line"
                        type="object"
                        class="btn-primary"
                    />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="sale_order_line_service_update_action" model="ir.actions.act_window">
        <field name="name">Update Service line</field>
        <field name="res_model">sale.order.line.service.update.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_sale_order_line_service_update_wizard"/>
        <field name="domain">[('line_id', '=', active_id)]</field>
        <field name="context">{'default_line_id': active_id}</field>
        <field name="target">new</field>
    </record>
</odoo>
