<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="account_move_view_form_inherit" model="ir.ui.view">
        <field name="name">account.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//label[@for='invoice_date']" position="before">
                <field name="mrstore_quotation_type"></field>
            </xpath>
        </field>
    </record>

    <record id="account_move_view_tree_inherit" model="ir.ui.view">
        <field name="name">account.move.view.tree.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_out_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree//field[@name='name']" position="after">
                <field name="mrstore_quotation_type"></field>
            </xpath>
        </field>
    </record>

    <record id="account_move_view_quotation_filter" model="ir.ui.view">
        <field name="name">account.move.view.select.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//group" position="inside">
                <filter string="Quotation Type" name="quotation_type" domain="[]" context="{'group_by':'mrstore_quotation_type'}"/>
            </xpath>
        </field>
    </record>
</odoo>
