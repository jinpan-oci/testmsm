<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sale_order_form_quote_inherit_inherit" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="mr_store_report.sale_order_form_quote_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='pu_position_selection']" position="after">
                <field name="mrstore_quotation_type"/>
                <xpath expr="//field[@name='partner_invoice_id']" position="move"/>
                <xpath expr="//field[@name='partner_shipping_id']" position="move"/>
            </xpath>
        </field>
    </record>

    <record id="sale_order_view_tree_inherit" model="ir.ui.view">
        <field name="name">sale.order.view.tree.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree_with_onboarding"/>
        <field name="arch" type="xml">
            <xpath expr="//tree//field[@name='name']" position="after">
                <field name="mrstore_quotation_type"></field>
            </xpath>
        </field>
    </record>

    <record id="sales_order_view_quotation_filter" model="ir.ui.view">
        <field name="name">sale.order.view.select.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.sale_order_view_search_inherit_quotation"/>
        <field name="arch" type="xml">
            <xpath expr="//group" position="inside">
                <filter string="Quotation Type" name="quotation_type" domain="[]" context="{'group_by':'mrstore_quotation_type'}"/>
                <filter string="Quotation Type Filter" name="quotation_type" domain="[('mrstore_quotation_type', '!=', 'none')]"/>
            </xpath>
        </field>
    </record>
</odoo>
