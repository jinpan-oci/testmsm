<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_mail_activity_type_form_inherit" model="ir.ui.view">
        <field name="name">mail.activity.type.form.inherit</field>
        <field name="model">mail.activity.type</field>
        <field name="inherit_id" ref="mail.mail_activity_type_view_form"/>
        <field name="arch" type="xml">
        <xpath expr="//group[@name='activity_details']" position="after">
                <group string="Stages">
                    <field name="stage_id"/>
                    <field name="rules" widget="ace" options="{'mode': 'python'}"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>