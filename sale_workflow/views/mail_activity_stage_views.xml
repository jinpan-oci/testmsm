<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_mail_activity_stage_tree" model="ir.ui.view">
        <field name="name">mail.activity.stage.tree</field>
        <field name="model">mail.activity.stage</field>
        <field name="arch" type="xml">
            <tree string="Mail Activity Stage">
                <field name="name"/>            
                <field name="res_model"/>
                <field name="wait_for_all_activities"/>
                <field name ="activity_type_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <record id="view_mail_activity_stage_form" model="ir.ui.view">
        <field name="name">mail.activity.stage.form</field>
        <field name="model">mail.activity.stage</field>
        <field name="arch" type="xml">
            <form string="Mail Activity Stage">
                <group>
                    <field name="name"/>
                    <field name="res_model"/>
                    <field name="parent_stage_id"/>
                    <field name="wait_for_all_activities" widget="boolean_toggle"/>
                    <field name="activity_type_ids"/>
                </group>
            </form>
        </field>
    </record>

    <record id="action_mail_activity_stage" model="ir.actions.act_window">
        <field name="name">Mail Activity Stages</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mail.activity.stage</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_mail_activity_stage_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create the first Mail Activity Stage
            </p>
        </field>
    </record>

    <menuitem id="menu_mail_activity_stage" 
            name="Mail Activity Stages" 
            parent="mail.mail_menu_technical" 
            action="action_mail_activity_stage"
            sequence="9"/>
</odoo>
