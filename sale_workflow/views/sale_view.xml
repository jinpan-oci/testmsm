<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
        <!-- sale.order inherit tree view -->
        <record id="sales_wkflw_view_id" model="ir.ui.view">
            <field name="name">sale.order.inherit.wrklw.view.tree</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_quotation_tree"/>
            <field name="arch" type="xml">
                <!-- Add your xpath here -->
                <xpath expr="//field[@name='name']" position="after">
                    <field name="worklfow_stage_id" optional="show"/>           
                </xpath>
            </field>
        </record>
        <record id="sales_wrkflw_view_form" model="ir.ui.view">
            <field name="name">sale.order.inherit.wrklw.view.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <!-- Add your xpath here -->
                <xpath expr="//field[@name='partner_shipping_id']" position="after">
                    <field name="worklfow_stage_id"/>
                 </xpath>
            </field>
        </record>
</odoo>
