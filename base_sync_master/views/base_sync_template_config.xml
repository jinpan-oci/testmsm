<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_base_sync_template_tree" model="ir.ui.view">
        <field name="name">base.sync.template.tree</field>
        <field name="model">base.sync.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="is_default_template"/>
            </tree>
        </field>
    </record>

    <record id="view_base_sync_template_form" model="ir.ui.view">
        <field name="name">base.sync.template.form</field>
        <field name="model">base.sync.template</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="is_default_template"/>
                        <field name="csv_or_xlsx"/>
                        <field name="base_sync_template_line_ids" default_order="sequence">
                            <tree>
                                <control>
                                    <create name="add_product_control" string="Add a line"/>
                                </control>
                                <field name="sequence" column_invisible="True"/>
                                <field name="ir_exports_id"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_base_sync_template_config" model="ir.actions.act_window">
        <field name="name">Base Sync Template</field>
        <field name="res_model">base.sync.template</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_base_sync_template_tree"/>
    </record>

    <menuitem id="menu_base_sync_template"
        name="Base Sync Template"
        parent="stock.menu_stock_config_settings"
        action="action_base_sync_template_config"
        sequence="100"/>
</odoo>
