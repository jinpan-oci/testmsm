<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="calendar_event_view_form" model="ir.ui.view">
        <field name="name">calendar.event.form</field>
        <field name="model">calendar.event</field>
        <field name="inherit_id" ref="calendar.view_calendar_event_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="before">
                <header>
                    <button string="New Quotation" name="action_sale_quotations_new" type="object" class="oe_highlight" data-hotkey="q" title="Create new quotation" /><!--invisible="type == 'lead' or probability == 0 and not active"-->
                </header>
            </xpath>
        </field>
    </record>
</odoo>
