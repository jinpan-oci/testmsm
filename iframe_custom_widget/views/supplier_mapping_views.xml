<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_supplier_mapping_tree" model="ir.ui.view">
        <field name="name">iframe.supplier.mapping.tree</field>
        <field name="model">iframe.supplier.mapping</field>
        <field name="arch" type="xml">
            <tree>
                <field name="supplier_code"/>
                <field name="partner_id"/>
            </tree>
        </field>
    </record>

    <record id="view_supplier_mapping_form" model="ir.ui.view">
        <field name="name">iframe.supplier.mapping.form</field>
        <field name="model">iframe.supplier.mapping</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="supplier_code"/>
                        <field name="partner_id"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_supplier_mapping" model="ir.actions.act_window">
        <field name="name">Supplier Mapping</field>
        <field name="res_model">iframe.supplier.mapping</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_supplier_mapping"
              name="Supplier Mapping"
              parent="menu_hercule_configuration"
              action="action_supplier_mapping"
              groups="sales_team.group_sale_manager"/>
</odoo>