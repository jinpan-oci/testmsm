<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherit_product_template_form_view" model='ir.ui.view'>
        <field name='name'>inherit.product.template.form.view</field>
        <field name='model'>product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name='arch' type='xml'>
            <xpath expr="//div[@name='options']" position="inside">
                <div>
                    <field name="product_source" attrs="{'invisible': [('product_source', '=', False)]}"/>
                    <label for="product_source" attrs="{'invisible': [('product_source', '=', False)]}"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>