<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="action_report_folder_raw" model="ir.actions.report">
        <field name="name">Folder Mr Store</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">mr_store_report_folder.report_folder_raw</field>
        <field name="report_file">mr_store_report_folder.report_folder_raw</field>
        <field name="print_report_name">'Folder ' + str((object.state in ('draft', 'sent') and 'Quotation - %s' % (object.name)) or 'Order - %s' % (object.name))</field>
        <field name="paperformat_id" ref="mr_store_report_folder.paperformat_mr_store_internal"/>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="binding_type">report</field>
    </record>
</odoo>
