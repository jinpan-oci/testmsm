<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.trello</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="5"/>
        <field name="inherit_id" ref="project.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/app[@name='project']" position="inside">
                <block title="Connecteur Trello">
                    <group string="Trello Keys">
                        <group string="Trello API Keys">
                            <field name="trello_api_key" placeholder="Trello API Key"/>
                            <field name="trello_api_secret" placeholder="Trello API Secret"/>
                        </group>
                        <group string="Trello OAuth Token">
                            <field name="trello_token" placeholder="Trello OAuth Token"/>
                            <field name="trello_token_secret" placeholder="Trello OAuth Token Secret"/>
                        </group>
                        <group string="Trello Config">
                            <field name="use_only_first_task" help="If checked, only the first task of a sale order will be used to create a trello card"/>
                        </group>
                    </group>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
