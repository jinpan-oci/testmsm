<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="product_template_form_view_mr_store" model="ir.ui.view">
        <field name="name">product.template.common.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_information']/group[2]" position="after">
                <group string="Saleorder presentation" name="Saleorder_presentation">
                    <field name="presentation_before" widget="html"/>
                    <field name="presentation_after" widget="html"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
