<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="account_document_tax_totals_inva">
        <t t-foreach="tax_totals['subtotals']" t-as="subtotal">
            <tr class="border-black o_subtotal">
                <t t-if="o.move_type == 'out_refund' or o.move_type == 'in_refund'">
                    <td><strong>Montant</strong></td>
                </t>
                <t t-else="">
                    <td><strong>Montant du solde</strong></td>
                </t>

                <td class="text-end">
                    <span t-att-class="oe_subtotal_footer_separator" t-out="subtotal['formatted_amount']" style="font-weight: bold;"/>
                </td>
                <td class="text-end">
                    <span t-out="tax_totals['formatted_amount_total']" style="font-weight: bold;"/>
                </td>
            </tr>

            <t t-set="subtotal_to_show" t-value="subtotal['name']"/>
            <t t-call="mr_store_report.tax_groups_totals_inva"/>
        </t>

        <tr t-if="'formatted_rounding_amount' in tax_totals and tax_totals['rounding_amount'] != 0">
            <td>Rounding</td>
            <td class="text-end">
                <span t-out="tax_totals['formatted_rounding_amount']">0</span>
            </td>
        </tr>

        <!--Total amount with all taxes-->
        <!-- <tr class="border-black o_total">
            <td><strong>Total TTC</strong></td>
            <td class="text-end">
                <span t-out="tax_totals['formatted_amount_total']"/>
            </td>
        </tr> -->
    </template>
</odoo>
