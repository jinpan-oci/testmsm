<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="account.account_invoices" model="ir.actions.report">
        <field name="name">Invoice with payment</field>
        <field name="report_name">mr_store_report.ms_report_invoice_alternative</field>
        <field name="report_file">mr_store_report.ms_report_invoice_alternative</field>
        <field name="print_report_name">'Facture Monsieur Store - N°' + str(object.name)</field>
        <field name="paperformat_id" ref="mr_store_report.paperformat_mr_store_invoice_alternative"/>
    </record>

    <record id="account.account_invoices_without_payment" model="ir.actions.report">
        <field name="name">Invoices without payment</field>
        <field name="report_name">mr_store_report.ms_report_invoice_alternative_without_payment</field>
        <field name="report_file">mr_store_report.ms_report_invoice_alternative_without_payment</field>
        <field name="print_report_name">'Facture Monsieur Store - N°' + str(object.name)</field>
        <field name="paperformat_id" ref="mr_store_report.paperformat_mr_store_invoice_alternative"/>
    </record>

    <record id="account_invoices_mail" model="ir.actions.report">
        <field name="name">Invoices with payment</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">account.report_invoice_with_payments</field>
        <field name="report_file">account.report_invoice_with_payments</field>
        <field name="print_report_name">(object._get_report_base_filename())</field>
        <field name="attachment"/>
        <field name="binding_model_id" ref="model_account_move"/>
        <field name="binding_type">report</field>
    </record>

    <record id="mr_store_report.account_invoices_mail" model="ir.actions.report">
        <field name="name">Invoice mail with payment</field>
        <field name="report_name">mr_store_report.ms_report_invoice_mail_alternative</field>
        <field name="report_file">mr_store_report.ms_report_invoice_mail_alternative</field>
        <field name="print_report_name">'Facture Mail Monsieur Store - N°' + str(object.name)</field>
        <field name="paperformat_id" ref="mr_store_report.paperformat_mr_store_invoice_alternative_mail"/>
    </record>
</odoo>
