    <record id="purchase.report_purchase_quotation" model="ir.actions.report">
        <field name="name">Request for Quotation Mr Store</field>
        <field name="report_name">mr_store_report.ms_report_purchaseorder</field>
        <field name="report_file">mr_store_report.ms_report_purchaseorder</field>
        <field name="print_report_name">'Demande de prix Monsieur Store - N°' + str(object.name)</field>
        <field name="paperformat_id" ref="mr_store_report.paperformat_mr_store_invoice"/>
    </record>
</odoo>
