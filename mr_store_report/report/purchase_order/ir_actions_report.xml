<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="purchase.action_report_purchase_order" model="ir.actions.report">
        <field name="name">Purchase Order Mr Store</field>
        <field name="report_name">mr_store_report.ms_report_purchaseorder</field>
        <field name="report_file">mr_store_report.ms_report_purchaseorder</field>
        <field name="print_report_name">'Bon de livraison Monsieur Store - N°' + str(object.name)</field>
