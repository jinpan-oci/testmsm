<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.mr_store_sale</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="5"/>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/app[@name='general_settings']" position="inside">
                <block title="Portal Remover" id="portal_remover">
                    <group string="Deactivate Portal">
                        <field name="deactivate_portal" widget="boolean_toggle"/>
                    </group>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
